<%- include("partials/header") %>
    <!-- Log in form section -->
    <div class="alert-container">
        <% if(error && error.length > 0) { %>
            <div class="alert alert-danger" role="alert">
                <%= error %>
            </div>
        <% } %>

        <% if(success && success.length > 0) { %>
            <div class="alert alert-success" role="alert">
                <%= success %>
            </div>
        <% } %>
    </div>
    <section class="log-in">
        <form class="log-in-form" id="form" action="/login" method="POST">
            <figure class="logo-container">
                <img class="login-logo" src="/img/logo-small.jpg" alt="Logo">
            </figure>
            <div class="form-group">
                <!-- <label for="user">Username:</label> -->
                <input type="text" id="user" name="username" class="input-field" placeholder="Username">
            </div>
            <div class="form-group">
                <!-- <label for="password">Password:</label> -->
                <input type="password" id="password" name="password" class="input-field" placeholder="Password">
            </div>
            <div class="form-group">
                <input type="submit" value="Login" class="submit-btn">
            </div>
        </form>  
    </section>
<%- include("partials/footer") %>