<%- include("../partials/header") %>
<%- include("../partials/navbar") %>

    <!-- Log in form section -->
    <section class="edit-customer">
        <form class="new-customer-form" id="form" action="/customers/<%= customer._id %>?_method=PUT" method="POST">
            <figure class="logo-container">
                <img class="login-logo" src="/img/logo-small.jpg" alt="Logo">
            </figure>
            <div class="form-group">
                <label for="name">Full Name:</label>
                <input type="text" id="name" name="name" class="customer-form" value="<%= customer.name %>" required>
            </div>
            <div class="form-group">
                <div class="phone-group">
                    <label for="code">Country Code:</label>
                    <input type="number" id="code" name="code" class="customer-form form-code" value="<%= customer.code %>" required>
                </div>
                <div class="phone-group">
                    <label class="phone-label" for="phone">Phone Number:</label>
                    <input type="number" id="phone" name="phone" class="customer-form form-phone" value="<%= customer.phone %>" required>
                </div>
            </div>
            <!-- <div class="form-group">
                <label for="email">Email Address:</label>
                <input type="email" id="email" name="email" class="customer-form" value="<%= customer.email %>">
            </div> -->
            <div class="form-group">
                <label for="address">Home Address:</label>
                <input type="text" id="address" name="address" class="customer-form" value="<%= customer.address %>" required>
            </div>
            <div class="form-group">
                <label for="post">Post Code:</label>
                <input type="text" id="post" name="post" class="customer-form" value="<% customer.post %>" required>
            </div>
            <div class="form-group">
                <label for="notes">Notes:</label>
                <textarea id="notes" name="notes" class="customer-form notes" required><%= customer.notes %></textarea>
            </div>
            <div class="form-group">
                <input type="submit" value="Update Customer" class="submit-btn">
                <a class="back-btn" href="/customers/<%= customer._id %>">Back to Customer</a>
            </div>
        </form>  
    </section>

<%- include("../partials/footer") %>