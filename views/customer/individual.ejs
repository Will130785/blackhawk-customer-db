<%- include("../partials/header") %>
<%- include("../partials/navbar") %>

<% customer.forEach(cust => { %>
    <section class="customer-card">
        <article class="c-name">
            <p>Name: <%= cust.name %></p>
        </article>

        <article class="c-name">
            <p>Country Code: <%= customer.code %></p>
        </article>
    
        <article class="c-name">
            <p>Telephone: <%= cust.phone %></p>
        </article>
    
        <article class="c-name">
            <p>Address: <%= cust.address %></p>
        </article>

        <article class="c-name">
            <p>Address: <%= cust.post %></p>
        </article>
    
        <article class="c-name">
            <p>Notes: <%= cust.notes %></p>
        </article>
    
        <article class="buttons">
            <a class="edit-btn" href="/customers/<%= cust._id %>/edit">Edit</a>
            <form action="/customers/<%= cust._id %>?_method=DELETE" method="POST">
                <input type="submit" class="delete-btn" value="Delete">
            </form>
            <a class="back-btn" href="/customers">Customer Database</a>
            <a class="add-btn search-btn" href="/menu">Main Menu</a>
        </article>
    </section>

<% }) %>


<%- include("../partials/footer") %>