<%- include("partials/header") %>
    <!-- Log in form section -->
    <section class="log-in">
        <form class="log-in-form" id="form" action="/customers/search/customer" method="POST">
            <figure class="logo-container">
                <img class="login-logo" src="/img/logo-small.jpg" alt="Logo">
            </figure>
            <div class="form-group">
                <label for="search">Enter customer name</label>
                <input type="text" id="search" name="search" class="form-control">
            </div>
            <div class="form-group">
                <input type="submit" value="Search" class="submit-btn form-control">
            </div>
        </form>  
    </section>
<%- include("partials/footer") %>