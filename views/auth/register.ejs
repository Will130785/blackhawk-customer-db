<%- include("../partials/header") %>
<%- include("../partials/navbar") %>
    <!-- Log in form section -->
    <section class="register">
        <form class="log-in-form" id="form" action="/register" method="POST">
            <figure class="logo-container">
                <img class="login-logo" src="/img/logo-small.jpg" alt="Logo">
            </figure>
            <div class="form-group">
                <label for="user">Username:</label>
                <input type="text" id="user" name="username" class="input-field">
            </div>
            <div class="form-group">
                <label for="password">Password:</label>
                <input type="password" id="password" name="password" class="input-field">
            </div>
            <div class="form-group">
                <input type="submit" value="Register User" class="submit-btn">
            </div>
        </form>  
    </section>
<%- include("../partials/footer") %>